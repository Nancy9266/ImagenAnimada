<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.joseandres.imagenanimada.MainActivity"
    android:background="#ee6be7">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GIRAR"
        android:id="@+id/btn1"
        android:layout_marginStart="51dp"
        android:layout_above="@+id/btn3"
        android:layout_alignParentStart="true"
        android:textSize="20dp"
        android:onClick="setListFooter" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TRASLADAR"
        android:id="@+id/btn2"
        android:layout_above="@+id/btn3"
        android:layout_toEndOf="@+id/btn3"
        android:textSize="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AMPLIAR"
        android:id="@+id/btn3"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/btn4"
        android:layout_marginBottom="47dp"
        android:textSize="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TRANSPARENCIA"
        android:id="@+id/btn4"
        android:layout_alignTop="@+id/btn3"
        android:layout_toEndOf="@+id/btn1"
        android:textSize="20dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/megara.jpg"
        android:background="@mipmap/megara"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="63dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Anima a Megara"
        android:id="@+id/textView"
        android:textSize="20dp"
        android:layout_below="@+id/megara.jpg"
        android:layout_centerHorizontal="true"
        android:textColor="#faf8f8" />
</RelativeLayout>
